            <!--android:layout_width="2dp"-->
            <!--android:layout_height="7.5dp"-->
            <!--android:background="@color/text_color_black10"></View>-->
            <!--<TextView-->
            <!--android:background="@drawable/bg_oval_black_5dp"-->
            <!--android:layout_width="5dp"-->
            <!--android:layout_height="5dp" />-->
