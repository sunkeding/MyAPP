<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <Button
        android:id="@+id/bt"
        tools:text="原生跳原生"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"

            android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="21dp">
                <View
                    android:layout_width="1dp"
                    android:layout_height="8dp"
                    android:visibility="invisible"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/text_color_black10"></View>
                <ImageView
                    android:layout_width="5dp"

                    android:layout_height="5dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/oval" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="8dp"

                    android:layout_gravity="center_horizontal"
                    android:background="@color/text_color_black10"></View>
            </LinearLayout>



            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/text_color_black10"></View>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="21dp">
                <View
                    android:layout_width="1dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/text_color_black10"></View>
                <ImageView
                    android:layout_width="5dp"

                    android:layout_height="5dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/oval" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/text_color_black10"></View>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/text_color_black10"></View>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="21dp">
                <View
                    android:layout_width="1dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/text_color_black10"></View>
                <ImageView
                    android:layout_width="5dp"

                    android:layout_height="5dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/oval" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/text_color_black10"></View>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/text_color_black10"></View>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:orientation="vertical">

                <View
                    android:layout_width="1dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/text_color_black10"></View>

                <ImageView
                    android:layout_width="5dp"

                    android:layout_height="5dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/oval" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="安全检查"
                android:textColor="@color/text_color_black80"
                android:textSize="15sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv11"
                android:layout_marginTop="2dp"
                android:text="检查装备、服装、配饰、水和纸巾等"
                android:paddingRight="27dp"

                android:textColor="@color/text_color_black40"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              android:layout_below="@+id/tv11"
                android:layout_marginTop="50dp"
                android:text="课前热身"
                android:textColor="@color/text_color_black80"
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv12"
                android:layout_marginTop="2dp"
                android:paddingRight="27dp"
                android:text="运动开始前进行关节活动、心肺热身、肌肉激活、动态伸展等热身活动"
                android:textColor="@color/text_color_black40"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/tv13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
           android:layout_below="@+id/tv12"
                android:layout_marginTop="71dp"
                android:text="针对性训练"
                android:textColor="@color/text_color_black80"
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="躯干激活、动作准备，针对客户目标集中训练"
                android:paddingRight="27dp"

                android:textColor="@color/text_color_black40"
                android:textSize="13sp"
                android:layout_below="@+id/tv13"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/tv14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv13"
                android:layout_marginTop="52dp"
                android:text="冷身放松"
                android:textColor="@color/text_color_black80"
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv14"
                android:paddingRight="27dp"

                android:layout_marginTop="2dp"
                android:text="拉伸、泡沫轴/筋膜球放松"
                android:layout_marginBottom="20dp"
                android:textColor="@color/text_color_black40"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>