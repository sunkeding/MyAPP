<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--自定义TextView，实现圆角，背景色，目的是为了少些重复的shape文件-->
    <declare-styleable name="customTextView">
        <attr name="textSolidColor" format="color" />
        <attr name="textStrokeColor" format="color" />
        <attr name="textRadius" format="dimension" />
        <attr name="textLeftTopRadius" format="dimension" />
        <attr name="textLeftBottomRadius" format="dimension" />
        <attr name="textRightTopRadius" format="dimension" />
        <attr name="textRightBottomRadius" format="dimension" />
        <attr name="textStrokeWidth" format="dimension" />
        <attr name="textDrawable" format="reference" />
        <attr name="textNormalTextColor" format="color" />
        <attr name="textSelectedTextColor" format="color" />
    </declare-styleable>
    <declare-styleable name="filterview">
        <attr name="title" format="string" />
        <attr name="unSelectetedTextcolor" format="color" />
        <attr name="selectetedTextcolor" format="color" />
        <attr name="unSelecetedIcon" format="reference" />
        <attr name="selecetedIcon" format="reference" />
    </declare-styleable>

    <declare-styleable name="DragSelectRecyclerView">
        <attr name="dsrv_autoScrollHotspotHeight" format="dimension"/>
        <attr name="dsrv_autoScrollEnabled" format="boolean"/>
        <attr name="dsrv_autoScrollHotspot_offsetTop" format="dimension"/>
        <attr name="dsrv_autoScrollHotspot_offsetBottom" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="TagFlowLayout">
        <attr name="auto_select_effect" format="boolean"></attr>
        <attr name="max_select" format="integer"></attr>
        <attr name="gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>
</resources>